@import '../node_modules/noscript/css/noscript.css'

// Using stylobuild to build the styles
use('node_modules/stylobuild', {
  ie: ie
})

// Include all the stuff
@require "node_modules/stylobate-islands/node_modules/stylobate/"

// Your styles go here

break-words()
  white-space: pre-wrap;
  word-wrap: break-word;

  -ms-word-break: break-all;
  word-break: break-all;
  word-break: break-word; // Non standard for webkit

.page
  background: #EEE
  font: 20px/1.5 "Helvetica Neue", Arial, sans-serif

.page-wrapper
  width: 42em
  margin: 0 auto

.island
  background: #FFF
  width: 800px
  padding: 1em
  margin: 1em auto
  box-shadow: 0 1px 3px #DDD

pre
  break-words()

_ie = false unless _ie is defined

